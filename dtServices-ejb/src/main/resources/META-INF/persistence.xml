<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="recover_house" transaction-type="JTA">
		<jta-data-source>jboss/datasources/recover_houseDS</jta-data-source>

		<class>pt.gois.dtServices.entity.Bairro</class>
		<class>pt.gois.dtServices.entity.Endereco</class>
		<class>pt.gois.dtServices.entity.Entidadedefacturacao</class>
		<class>pt.gois.dtServices.entity.Freguesia</class>
		<class>pt.gois.dtServices.entity.Iimagem</class>
		<class>pt.gois.dtServices.entity.Imovel</class>
		<class>pt.gois.dtServices.entity.Mapa</class>
		<class>pt.gois.dtServices.entity.Orcamento</class>
		<class>pt.gois.dtServices.entity.Processo</class>
		<class>pt.gois.dtServices.entity.Servico</class>
		<class>pt.gois.dtServices.entity.Solicitante</class>

		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<!-- 
			<property name="hibernate.dialect" value="org.hibernate.dialect.ProgressDialect"/>
			 -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>